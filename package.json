{
    "name": "rouge-rose",
    "version": "2.0.0",
    "private": true,
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/rougerose/rouge-rose.git"
    },
    "author": "christophe le drean",
    "homepage": "https://rouge-rose.net",
    "description": "",
    "browserslist": [
        "defaults"
    ],
    "scripts": {
        "bs": "browser-sync start -c package-scripts/browsersync.config.cjs",
        "build": "run-s clean && run-p build:* && run-s css:dev",
        "build:js": "rollup -c package-scripts/rollup.config.js",
        "build:scss": "sass --no-source-map --load-path=node_modules src/scss/index.scss dist/css/rouge-rose.tmp.css",
        "build:tokens": "node package-scripts/style-dictionary.config.js",
        "clean": "rimraf -g 'dist/{css/*,js/*}'",
        "css:dev": "lightningcss --bundle --browserslist dist/css/rouge-rose.tmp.css -o dist/css/rouge-rose.min.css",
        "css:prod": "lightningcss --minify --bundle --browserslist dist/css/rouge-rose.tmp.css -o dist/css/rouge-rose.min.css",
        "prod": "run-s clean && NODE_ENV=production run-p build:* && run-s css:prod",
        "watch": "run-p build bs watch:*",
        "watch:css": "chokidar 'src/scss/**/*.scss' -c 'npm run build:scss && npm run css:dev'",
        "watch:js": "chokidar 'src/js/**/*.js' -c 'npm run build:js'",
        "watch:tokens": "chokidar 'src/design-tokens/**/*.json' -c 'npm run build:tokens'"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^29.0.0",
        "@rollup/plugin-node-resolve": "^16.0.3",
        "@rollup/plugin-terser": "^0.4.4",
        "browser-sync": "^3.0.4",
        "chokidar-cli": "^3.0.0",
        "dom-parents": "^1.1.4",
        "lightningcss-cli": "^1.30.2",
        "npm-run-all2": "^8.0.4",
        "photoswipe": "^5.4.4",
        "prettier": "^3.7.4",
        "rimraf": "^6.1.2",
        "rollup": "^4.59.0",
        "sass": "^1.97.1",
        "sass-mq": "^7.0.0",
        "style-dictionary": "^5.1.1",
        "style-dictionary-utils": "^6.0.1",
        "utopia-core-scss": "^1.3.1"
    }
}
